<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">

    <record model="mail.message.subtype" id="mt_blog_public_comment">
        <field name="name">Anonymous Blog Comment</field>
        <field name="res_model">blog.post</field>
        <field name="description">New comment from a public visitor</field>
        <field name="default" eval="False"/>
        <field name="hidden" eval="False"/>
        <field name="parent_id" ref="mail.mt_comment"/>
    </record>

    <record model="mail.template" id="blog_post_notification_mail_template">
        <field name="name">Blog Post Notification Mail Template</field>
        <field name="model_id" ref="mail.model_mail_message"/>
        <field name="subject">New anonymous comment on {{ object.record_name }}</field>
<!--        <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted) }}</field>-->
        <field name="lang">{{ object.env.user.lang }}</field>
        <field name="body_html" type="html">
        <div style="font-family: Arial, sans-serif; font-size: 14px;">
            <p>Hello,</p>
            <p>You have received a new comment on your blog post <strong>{{ object.record_name }}</strong>.</p>
            <hr/>
            <div style="background-color: #f9f9f9; padding: 15px; border-radius: 5px;">
                {{ object.body | safe }}
            </div>
            <hr/>
            <p>You can view the post and manage comments by clicking the button below:</p>
            <div style="margin: 16px 0px;">
                <a t-att-href="'/mail/view?model=blog.post&amp;res_id=%s' % object.res_id"
                   style="background-color: #875A7B; padding: 10px 20px; text-decoration: none; color: #fff; border-radius: 5px;">
                   View Blog Post
                </a>
            </div>
        </div>
    </field>
    </record>
</odoo>